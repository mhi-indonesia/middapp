<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Midapp MHI</title>

    <!-- css styling -->
     <link rel="stylesheet" href="/css/style.css">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <!-- header -->
     <header class="shadow">
        <h2>üìä Middleware Dashboard</h2>
     </header>

    <!-- main -->
     <main>

        <!-- Filter Card -->
        <section class="filter-card" id="filterCard">

            <!-- total pesanan -->
            <div class="total-pesanan shadow" id="totalPesanan" onclick="location.href='/dashboard?tab=orders'">
                <div class="wrap">
                    <h6>Total Pesanan</h6>
                    <h3><%= stats.total %></h3>
                </div>
            </div>

            <!-- sukses sinkron -->
             <div class="sukses-sinkron shadow" id="suksesSinkron" onclick="location.href='/dashboard?tab=orders&status=SUCCESS'">
                <div class="wrap">
                    <h6>Sukses Sinkron</h6>
                    <h3><%= stats.sukses %></h3>
                </div>
            </div>

            <!-- gagal sinkron -->
             <div class="gagal-sinkron shadow" id="gagalSinkron" onclick="location.href='/dashboard?tab=orders&status=FAILED'">
                <div class="wrap">
                    <h6>Gagal Sinkron</h6>
                    <h3><%= stats.gagal %></h3>
                </div>
            </div>

        </section>

        <!-- tabel utama -->
        <section class="data-table shadow" id="dataTable">
            <!-- Tab Tabel -->
            <ul class="nav nav-tabs mb-3">
                <li class="nav-item">
                    <a class="nav-link <%= currentTab === 'orders' ? 'active' : '' %>" href="/dashboard?tab=orders">Tabel Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= currentTab === 'users' ? 'active' : '' %>" href="/dashboard?tab=users">Tabel Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= currentTab === 'items' ? 'active' : '' %>" href="/dashboard?tab=items">Tabel Items</a>
                </li>
            </ul>

            <!-- tabel konten -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">

                        <!-- kondisi untuk menampilkan tabel header -->
                        <thead class="table-light">

                            <!-- manampilkan table header orders -->
                            <% if(currentTab === 'orders') { %>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Items</th>
                                    <th>Total</th>
                                    <th>Payment</th>
                                    <th>Status Sync</th>
                                    <th>Aksi</th>
                                </tr>

                                <!-- Menampilkan table header users -->
                            <% } else if(currentTab === 'users') { %>
                                <tr>
                                    <th>Grab Order ID</th>
                                    <th>Nama</th>
                                    <th>Telepon</th>
                                    <th>Email</th>
                                    <th>Order Ref</th>
                                </tr>

                                <!-- Menampilkan tabel header items -->
                            <% } else { %>
                                <tr>
                                    <th>Grab Order ID</th>
                                    <th>Produk</th>
                                    <th>Qty</th>
                                    <th>Harga</th>
                                    <th>Order Ref</th>
                                </tr>
                            <% } %>
                        </thead>
                        <tbody>
                            <% data.forEach(row => { %>
                                <tr>
                                    <% if(currentTab === 'orders') { %>
                                        <td>
                                            <strong class="order_id"><%= row.grab_order_id %></strong><br><small class="text-muted"><%= new Date(row.created_at).toLocaleString('id-ID') %></small>
                                        </td>
                                        <td><%= row.customer_name %></td>
                                        <td>
                                            <% if(row.barang) { %>
                                                <small><%= row.barang.length %> item(s)</small>
                                            <% } %>
                                        </td>
                                        <td>Rp <%= Number(row.total_amount).toLocaleString() %></td>
                                        <td>
                                            <span class="badge bg-<%= row.payment_status === 'PAID' ? 'info' : 'warning text-dark' %>">
                                                <%= row.payment_status %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-<%= row.status_sync === 'SUCCESS' ? 'success' : 'danger' %>"><%= row.status_sync %></span>
                                        </td>
                                        <td>
                                            <% if (row.status_sync !== 'SUCCESS') { %>
                                                <button class="btn btn-sm btn-outline-primary action-button" onclick="reSync('<%= row.id %>', event)">
                                                    üîÑ Sync
                                                </button>
                                            <% } else { %>
                                                <span class="text-success small">‚úî Synced</span>
                                            <% } %>
                                        </td>
                                    <% } else if(currentTab === 'users') { %>
                                        <td><span class="badge bg-secondary"><%= row.grab_order_id %></span></td>
                                        <td><%= row.customer_name %></td>
                                        <td><%= row.phone_number %></td>
                                        <td><%= row.customer_email %></td>
                                        <td><small class="text-muted">#<%= row.order_id %></small></td>

                                    <% } else { %>
                                        <td><span class="badge bg-secondary"><%= row.grab_order_id %></span></td>
                                        <td><%= row.product_name %></td>
                                        <td><%= row.quantity %></td>
                                        <td>Rp <%= Number(row.sale_price).toLocaleString() %></td>
                                        <td><small class="text-muted">#<%= row.order_id %></small></td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="/dashboard?tab=<%= currentTab %>&status=<%= currentStatus %>&page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </section>

        <!-- tabel log error -->
        <section class="error-log-table shadow" id="errorLogTable">

            <!-- Header -->
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">üîÑ Synchronization Logs</h5>
            </div>

            <!-- tabel konten -->
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Waktu</th>
                                <th>Order ID</th>
                                <th>Status</th>
                                <th>Pesan</th>
                                <th>Detail</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% syncLogs.forEach(log => { %>
                                <tr>
                                    <td><small><%= new Date(log.created_at).toLocaleString('id-ID') %></small></td>
                                    <td class="order_id"><strong><%= log.grab_order_id %></strong></td>
                                    <td>
                                        <% 
                                            // Perbaikan: Pastikan status_sync tidak NULL di tampilan
                                            let currentStatus = log.status_sync || 'PENDING';
                                            let badgeClass = (currentStatus === 'SUCCESS') ? 'bg-success' : 
                                                                (currentStatus === 'FAILED') ? 'bg-danger' : 'bg-warning text-dark';
                                        %>
                                        <span class="badge rounded-pill <%= badgeClass %>"><%= currentStatus %></span>
                                    </td>
                                    <td><small><%= log.error_message %></small></td>
                                    <td>

                                        <% if (log.status_sync === 'FAILED') { %>
                                            <!-- <button class="btn btn-sm btn-outline-danger" 
                                                        onclick="showErrorLog('<%= log.raw_response || log.error_message || `Tidak ada detail error` %>')">
                                                    ‚ö†Ô∏è Detail Error
                                            </button> -->
                                            <span id="error-data-<%= log.id %>" style="display: none;">
                                                <%= log.raw_response || log.error_message %>
                                            </span>

                                            <button class="btn btn-sm btn-outline-danger action-button" 
                                                    onclick="showErrorLog('<%= log.id %>')">
                                                ‚ö†Ô∏è Detail
                                            </button>
                                        <% } else { %>
                                                -
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- pagination -->
            <div class="card-footer d-flex justify-content-between align-items-center bg-white">
                <span class="small text-muted">Halaman <%= currentLogPage %> dari <%= totalLogPages %></span>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <% for(let i = 1; i <= totalLogPages; i++) { %>
                            <li class="page-item <%= currentLogPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?tab=<%= currentTab %>&page=<%= currentPage %>&logPage=<%= i %>">
                                        <%= i %>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </section>


        <!-- popup detail error -->
        <div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">Pesan Error Sinkronisasi</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p><strong>Response API:</strong></p>
                        <pre id="errorContent" class="bg-light p-3 border" style="white-space: pre-wrap; word-wrap: break-word;"></pre>
                    </div>
                </div>
            </div>
        </div>
     </main>

     <!-- footer -->
    <footer>
        <p>Mitra Hub Indonesia &#169 2026, Marketplace Team</p>
    </footer>
<!-- js -->
<script src="/js/dashboard-action.js"></script>
<!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>